@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Long+Cang|Roboto:300,300i,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/login.css">
    <title> INC - @ViewData["Title"]</title>
</head>

<body>
    <div class="container">
        <form class="login_form" method="Post" autocomplete="off" action="account/login">
            <div class="flex-center">
                <div class="header_name">Sign in</div>
                <a class="register_button effect-shadow">sign up</a>
            </div>
            <div class="field_content">
                <i class="fa fa-user image_login_password" aria-hidden="true"></i>
                <input class="login" name="email" placeholder="email" />
            </div>
            <div class="field_content">
                <i class="fa fa-lock image_login_password" aria-hidden="true"></i>
                <input class="password" type="password" name="password" placeholder="password" />
            </div>
            <div class="field_button">
                <input class="submit_button" type="submit" value="Log in">
            </div>
        </form>
        <form class="registration_form hidden" method="Post" autocomplete="off" action="account/register">
            <div class="flex-center">
                <div class="header_name">Sign up</div>
                <a class="register_button effect-shadow">sign in</a>
            </div>
            <div class="field_content">
                <i class="fa fa-user image_login_password" aria-hidden="true"></i>
                <input class="login" name="first_name" placeholder="first name" />
            </div>
            <div class="field_content">
                <i class="fa fa-user image_login_password" aria-hidden="true"></i>
                <input class="login" name="second_name" placeholder="second name*" />
            </div>
            <div class="field_content">
                <i class="fa fa-envelope image_login_password" aria-hidden="true"></i>
                <input class="login" name="email" placeholder="email" />
            </div>
            <div class="field_content">
                <i class="fa fa-calendar image_login_password" aria-hidden="true"></i>
                <input class="date" type="date" min="1900-01-01" max="2008-01-01" name="birthday" />
            </div>
            <div class="field_content">
                <i class="fa fa-lock image_login_password" aria-hidden="true"></i>
                <input class="password" type="password" name="password" placeholder="password" />
            </div>
            <div class="field_content">
                <i class="fa fa-lock image_login_password" aria-hidden="true"></i>
                <input class="password" type="password" name="confirm_password" placeholder="confirm password" />
            </div>
            <div class="field_button">
                <input class="submit_button" type="submit" value="Register">
            </div>
        </form>
    </div>

    <script src="~/js/login.js"></script>
</body>
</html>